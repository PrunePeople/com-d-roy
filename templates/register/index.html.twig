{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4">
                {% if notification %}
                    <div class="alert alert-info">{{ notification }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Créer un compte</h1>
                {{ form_start(form, {'attr': {'class': 'form-signin'}}) }}

                {{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
                {{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom de famille'}}) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
                {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}

                {{ form_end(form) }}

                <hr>
                <p class="text-center">Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
